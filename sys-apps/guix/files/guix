#		chmodown_execbin ${libexec}

start() {
	local piddir=$(dirname ${PIDFILE})
	if [ ! -d ${piddir} ] ; then
		ebegin "Making ${piddir}"
		eend $?
		ebegin "Changing permissions of ${piddir}"
		chown :guixbuild ${piddir}
		eend $?
	fi

	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --user root --name guix-daemon --pidfile ${PIDFILE} \
		--exec /usr/bin/guix-daemon -- --build-users-group=guixbuild  >/dev/null 2>&1
	eend $?
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon --stop --signal QUIT --pidfile ${PIDFILE}
	sleep 1
	killall guix-daemon
	sleep 1
	eend $?
}

#[Unit]
#Description=Build daemon for GNU Guix
#
#[Service]
#ExecStart=/usr/bin/guix-daemon --build-users-group=guixbuild
#RemainAfterExit=yes
#StandardOutput=syslog
#StandardError=syslog
#
#[Install]
#WantedBy=multi-user.target
