stop() {
	   ebegin "Stopping Guix"
	   start-stop-daemon --stop --pidfile "${PIDFILE}" --exec /usr/bin/guix-daemon
	   #start-stop-daemon --stop --signal QUIT --pidfile "${PIDFILE}"
