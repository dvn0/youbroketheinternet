    <flag name='bluetooth'>bluetooth</flag>
    <flag name='X'>X11 features</flag>
    <flag name='dane'>build with gnutls + dane</flag>
    <flag name='gnutls'>gnutls</flag>
    <flag name='ssl'>openssl</flag>
    <flag name='experimental'>enable experimental features which may not yet compile</flag>
    <flag name='extra'>required IUSE for experimental features which may not yet compile</flag>
    <flag name='conversation'>build experimental feature 'conversation'</flag>
    <flag name='pulseaudio'>build experimental feature 'conversation' with pulseaudio backend</flag>
    <flag name='gstreamer'>build experimental feature 'conversation' with gstreamer backend</flag>
    <flag name='qr'>experimental feature</flag>
    <flag name='tex'>experimental feature</flag>
